<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="@dimen/_180sdp"
    android:layout_margin="@dimen/_8ssp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/red"
    android:padding="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_15ssp"
    app:cardElevation="@dimen/_10ssp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imgRecipe"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtRecipeName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="@id/imgRecipe" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_unsave"
                app:layout_constraintBottom_toBottomOf="@id/txtRecipeName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtRecipeName" />
        </LinearLayout>

<!--        <TextView-->
<!--            android:id="@+id/txtRecipeName"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/_30ssp"-->
<!--            android:background="@color/redlight"-->
<!--            android:gravity="center"-->
<!--            android:singleLine="true"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="@dimen/_15sdp"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/imgRecipe" />-->
    </LinearLayout>

</androidx.cardview.widget.CardView>